---
import "../styles/global.css";
---
<nav class="navbar navbar-expand-lg border-bottom" 
  aria-label="JK D. Projects Large Navigation Bar"
>
  <div class="container-fluid">
    <!-- Brand -->
    <a class="navbar-brand" href="/">
      <img src="/src/assets/images/favicon.png" aria-hidden="true"
        class="bi me-2 rounded-circle" style="height: 40px;width:40px;"
      >
      <span>JK D. Projects</span>
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas"
      data-bs-target="#offcanvasNavbar2" aria-controls="offcanvasNavbar2" 
      aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- offcanvas navbar: text-bg-dark -->
    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar2" aria-labelledby="offcanvasNavbar2Label">
      <!-- Mobile `Branding` header x Close btn -->
      <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasNavbar2Label">
          <img src="/src/assets/images/favicon.png" aria-hidden="true"
            class="bi me-2 rounded-circle" 
            style="height: 30px; width:30px;"
          >
          JK D. Projects</h5>
        <button type="button" 
          class="btn-close btn-close-white"
          data-bs-dismiss="offcanvas" 
          aria-label="Close"
        ></button>
      </div>

      <!-- navbar body -->
      <div class="offcanvas-body">
        <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
          <!--[ Home ]-->
          <li class="nav-item">
            <a class="nav-link active" 
              aria-current="page"
              href="/"
            >Home</a>
          </li>
          <!--[ About ]-->
          <li class="nav-item">
            <a class="nav-link" href="/about"
            >About</a>
          </li>
          <!--[ Contact ]-->
          <li class="nav-item">
            <a class="nav-link"
              href="/contact"
            >Contact</a>
          </li>
          <!--[ Projects ]-->
          <li class="nav-item">
            <a class="nav-link" href="/projects"
            >Projects</a>
          </li>
          <!--[ TBD: Feat ]-->
          <li class="nav-item">
            <a class="nav-link" href="/feat"
            >TBD: Feat</a>
          </li>
          <!--[ Blogs ]-->
          <li class="nav-item">
            <a class="nav-link" href="/blogs"
            >Blogs</a>
          </li>
          <!--[ Blog ]-->
          <li class="nav-item">
            <a class="nav-link" href="/blog"
            >Checkout my Blog</a>
          </li>
        </ul>
